# ── Tessera Docker Configuration ─────────────────────────
# Copy to .env and customize as needed

# Application port
SPRING_PROFILES_ACTIVE=oidc
TESSERA_PORT=8080
TESSERA_DB_PORT=5438
TESSERA_OIDC_ISSUER_URI="http://localhost:8088/realms/tessera"
TESSERA_OIDC_CLIENT_ID="tessera"
TESSERA_OIDC_CLIENT_SECRET="changeme"

# Postgres credentials
POSTGRES_DB=tessera
POSTGRES_USER=tessera
POSTGRES_PASSWORD=tessera
export UID='$(id -u)'
export GID='$(id -g)'
